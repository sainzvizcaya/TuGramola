<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fondo"
    tools:context="tablerocolores.cfic.edu.tugramola.activities.Acercade"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/cenefa"
        style="@style/cenefa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/ic_launcher" />
        <TextView
            style="@style/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gracias por usar TuGramola!!"
            android:paddingTop="20dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            style="@style/texto"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="* TuGramola te permite escuchar todos los samples disponibles en iTunes. Podrás buscar por artista, albún o canción y añadirlo a favoritos para poderlos escuchar donde quieras."/>
        <TextView
            style="@style/texto"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="* Podrás añadir a favoritos con cada nueva búsqueda asi como borrar los antiguos o la totalidad de los mismos."/>



        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_logocastraining_sf" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
